<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/SubmitStartPRelativeL1"
            android:layout_width="fill_parent"
            android:layout_height="90dp" >

            <TextView
                android:id="@+id/SubmitStartPointTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="起点:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/SubmitStartStreetEditT"
                style="@style/edittextStyle"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/SubmitStartCityEditT"
                android:layout_below="@+id/SubmitStartPointTextV"
                android:ems="10"
                android:hint="街道"
                android:maxLength="15"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/SubmitStartCityEditT"
                style="@style/edittextStyle"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/SubmitStartPointTextV"
                android:layout_alignBottom="@+id/SubmitStartPointTextV"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="城市"
                android:maxLength="15"
                android:textSize="20sp" >
                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/SubmitStartMapButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/SubmitStartCityEditT"
                android:layout_marginRight="16dp"
                android:background="@drawable/mappoint" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SubmitEndPRelativeL1"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/SubmitStartPRelativeL1" >

            <TextView
                android:id="@+id/SubmitEndPointTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="终点:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/SubmitEndStreetEditT"
                style="@style/edittextStyle"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SubmitEndPointTextV"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="街道"
                android:maxLength="15"
                android:textSize="20sp" >
            </EditText>

            <EditText
                android:id="@+id/SubmitEndCityEditT"
                style="@style/edittextStyle"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/SubmitEndPointTextV"
                android:layout_alignBottom="@+id/SubmitEndPointTextV"
                android:layout_alignLeft="@+id/SubmitEndStreetEditT"
                android:ems="10"
                android:hint="城市"
                android:maxLength="15"
                android:textSize="20sp" />

            <Button
                android:id="@+id/SubmitEndMapButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/SubmitEndCityEditT"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/SubmitEndStreetEditT"
                android:background="@drawable/mappoint" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SubmitAgeRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/SubmitGenderRelativeLayout"
            android:layout_marginLeft="0dp" >

            <TextView
                android:id="@+id/SubmitAgeTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="年龄："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/SubmitStartAgeEditT"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/SubmitAgeTextV"
                android:digits="1234567890"
                android:maxLength="2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/SubmitStartAgeTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/SubmitStartAgeEditT"
                android:text="岁     至"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/SubmitEndAgeEditT"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/SubmitStartAgeTextV"
                android:digits="1234567890"
                android:maxLength="2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/SubmitEndAgeTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/SubmitEndAgeEditT"
                android:text="岁 "
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SubmitPreferenceRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/SubmitWayRelativeLayout"
            android:layout_marginLeft="0dp" >

            <TextView
                android:id="@+id/SubmitPreferenceTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="偏好："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/SubmitPreferenceEditT"
                style="@style/edittextStyle"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/SubmitPreferenceTextV"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/SubmitPreferenceTextV"
                android:inputType="textMultiLine"
                android:lines="3"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SubmitSubmitRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/SubmitPreferenceRelativeLayout" >

            <Button
                android:id="@+id/SubmitSubmitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="提交"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SubmitStartTRelativeL"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/SubmitEndPRelativeL1" >

            <TextView
                android:id="@+id/SubmitStartTimeShowTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:ems="2"
                android:text="起始时间:"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/SubmitStartTVRL"
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/SubmitStartTimeShowTextV" >

                <TextView
                    android:id="@+id/SubmitStartDataTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/SubmitStartHMTextV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/SubmitStartHMTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextStartRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/SubmitStartHMTextV" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/SubmitStartBTRL"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/SubmitStartTVRL" >

                <Button
                    android:id="@+id/SubmitStartDataButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_above="@+id/SubmitStartHMButton"
                    android:text="修改日期" />

                <Button
                    android:id="@+id/SubmitStartHMButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:text="修改时间" />

                <Button
                    android:id="@+id/SubmitStartRangeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/SubmitStartHMButton"
                    android:text="修改范围" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SubmitWayRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/SubmitAgeRelativeLayout" >

            <TextView
                android:id="@+id/SubmitWayTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="模式"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/SubmitWayRadioG"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/SubmitWayTextV" >

                <RadioButton
                    android:id="@+id/SubmitTimeRadioB"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:checked="true"
                    android:text="最短路径"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/SubmitPayRadioB"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="最小费用"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/SubmitDistanceRadioB"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="最短距离"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/SubmitCrowdRadioB"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="最少拥堵"
                    android:textSize="20sp" />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SubmitEndTRelativeL"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/SubmitStartTRelativeL" >

            <TextView
                android:id="@+id/SubmitEndTimeShowTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:ems="2"
                android:text="到达时间:"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/SubmitEndTVRL"
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/SubmitEndTimeShowTextV" >

                <!-- <TextView
                    android:id="@+id/SubmitEndDataTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/SubmitEndHMTextV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="2015-01-05"
                    android:textSize="20sp" /> -->
				<TextView
                    android:id="@+id/SubmitEndDataTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/SubmitEndHMTextV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:textSize="20sp" />
                
                <TextView
                    android:id="@+id/SubmitEndHMTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="09:08"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextEndRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/SubmitEndDataTextV"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/SubmitEndHMTextV" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/SubmitEndBTRL"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/SubmitEndTVRL" >

                <Button
                    android:id="@+id/SubmitEndDataButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_above="@+id/SubmitEndHMButton"
                    android:text="修改日期" />

                <Button
                    android:id="@+id/SubmitEndHMButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:text="修改时间" />

                <Button
                    android:id="@+id/SubmitEndRangeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/SubmitEndHMButton"
                    android:text="修改范围" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SubmitGenderRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/SubmitEndTRelativeL" >

            <TextView
                android:id="@+id/SubmitGenderTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="性别："
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/SubmitGenderRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/SubmitGenderTextV"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/SubmitBothRadioButton"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:text="无"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/SubmitManRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="男"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/SubmitWomanRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="女"
                    android:textSize="20sp" />
            </RadioGroup>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>