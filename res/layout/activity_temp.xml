<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<RelativeLayout
            android:id="@+id/SubmitStartTRelativeL"
            android:layout_width="fill_parent"
            android:layout_height="140dp" >
            <TextView
                android:id="@+id/SubmitStartTimeShowTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="起始时间:"
                android:ems="2"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/SubmitStartTVRL"
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/SubmitStartTimeShowTextV" >

                <TextView
                    android:id="@+id/SubmitStartDataTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_above="@+id/SubmitStartHMTextV"  
                    android:layout_marginBottom="15dp"  
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/SubmitStartHMTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_centerVertical="true"                                
                    android:text="09:08"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/SubmitStartHMTextV"
                    android:layout_alignRight="@+id/SubmitStartHMTextV"
                    android:layout_below="@+id/SubmitStartHMTextV" />
                   
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/SubmitStartBTRL"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"     
                android:layout_marginLeft="10dp"           
                android:layout_toRightOf="@+id/SubmitStartTVRL" >
                <Button
                 	android:id="@+id/SubmitStartDataButton"
                 	android:layout_width="wrap_content"
                 	android:layout_height="40dp"
                 	android:layout_above="@+id/SubmitStartHMButton"  
                 	android:text="修改日期" />
                    
                <Button
                 	android:id="@+id/SubmitStartHMButton"
                 	android:layout_width="wrap_content"
                 	android:layout_height="40dp"
                 	android:layout_centerVertical="true"
                 	android:text="修改时间" />
                <Button
                 	android:id="@+id/SubmitStartRangeButton"
                 	android:layout_width="wrap_content"
                 	android:layout_height="40dp"
                 	android:layout_below="@+id/SubmitStartHMButton"
                 	android:text="修改范围" />
                
                       
             </RelativeLayout>
        </RelativeLayout>


<RelativeLayout
            android:id="@+id/SubmitEndTRelativeL"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/SubmitStartTRelativeL" >
            <TextView
                android:id="@+id/SubmitEndTimeShowTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="到达时间:"
                android:ems="2"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/SubmitEndTVRL"
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/SubmitEndTimeShowTextV" >

                <TextView
                    android:id="@+id/SubmitEndDataTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_above="@+id/SubmitEndHMTextV"  
                    android:layout_marginBottom="15dp"  
                    android:layout_centerHorizontal="true"                             
                    android:text="2015-01-05"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/SubmitEndHMTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_centerVertical="true"                                
                    android:text="09:08"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp" />
                 <TextView
                    android:id="@+id/SubmitEndRangeTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/SubmitEndHMTextV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"  
                    android:text="10分"
                    android:textSize="20sp" />      
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/SubmitEndBTRL"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"     
                android:layout_marginLeft="10dp"           
                android:layout_toRightOf="@+id/SubmitEndTVRL" >
                <Button
                 	android:id="@+id/SubmitEndDataButton"
                 	android:layout_width="wrap_content"
                 	android:layout_height="40dp"
                 	android:layout_above="@+id/SubmitEndHMButton"  
                 	android:text="修改日期" />
                    
                <Button
                 	android:id="@+id/SubmitEndHMButton"
                 	android:layout_width="wrap_content"
                 	android:layout_height="40dp"
                 	android:layout_centerVertical="true"
                 	android:text="修改时间" />
                <Button
                 	android:id="@+id/SubmitEndRangeButton"
                 	android:layout_width="wrap_content"
                 	android:layout_height="40dp"
                 	android:layout_below="@+id/SubmitEndHMButton"
                 	android:text="修改范围" />
                
                       
             </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
