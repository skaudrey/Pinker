<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
        	android:id="@+id/UserFriendRelativeLayout1"
        	android:layout_width="match_parent"
        	android:layout_height="60dp"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true" >
        	<TextView
            	android:id="@+id/UserFriendNameShowTextV"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_alignParentLeft="true"
            	android:layout_marginTop="30dp"
            	android:layout_marginLeft="15dp"
            	android:text="用户名:" 
            	android:textSize="20sp"/>

        	<TextView
        	    android:id="@+id/friendname"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_alignBottom="@+id/UserFriendNameShowTextV"
        	    android:layout_marginLeft="15dp"
        	    android:layout_toRightOf="@id/UserFriendNameShowTextV"
        	    android:maxLength="10"
        	    android:textSize="20sp" />
        
        </RelativeLayout>     
        <RelativeLayout
            android:id="@+id/UserFriendStartPRelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/UserFriendRelativeLayout1" >   
            <TextView
                android:id="@+id/UserFriendStartPEndPointTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="起点:"
                android:textSize="20sp" />
            <RelativeLayout
                android:id="@+id/UserFriendStartPRelativeL2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/UserFriendStartPEndPointTextV" >
                <TextView
                    android:id="@+id/UserFriendStartCityShowTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    
                    android:layout_alignParentLeft="true"
                    android:text="城市:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/UserFriendStartCityTextV"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/UserFriendStartCityShowTextV"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/UserFriendStartCityShowTextV"
                    android:maxLength="5"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/UserFriendStartStreetShowTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/UserFriendStartCityShowTextV"
                    android:layout_marginTop="5dp"
                    android:text="街道:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/UserFriendStartStreetTextV"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/UserFriendStartStreetShowTextV"
                    android:layout_alignTop="@+id/UserFriendStartStreetShowTextV"
                    android:layout_below="@+id/UserFriendStartCityTextV"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/UserFriendStartStreetShowTextV"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textSize="20sp" />

             </RelativeLayout>
        </RelativeLayout> 
        <RelativeLayout
            android:id="@+id/UserFriendEndPRelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/UserFriendStartPRelativeLayout1" >
            <TextView
                android:id="@+id/UserFriendEndPEndPointTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="终点:"
                android:textSize="20sp" />
            <RelativeLayout
                android:id="@+id/UserFriendEndPRelativeL2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/UserFriendEndPEndPointTextV" 
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/UserFriendEndCityShowTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/UserFriendEndCityTextV"
                    android:layout_alignParentLeft="true"
                    android:text="城市:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/UserFriendEndCityTextV"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/UserFriendEndCityShowTextV"
                    android:maxLength="5"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/UserFriendEndStreetShowTextV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/UserFriendEndCityShowTextV"
                    android:layout_marginTop="5dp"
                    android:text="街道:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/UserFriendEndStreetEditT"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/UserFriendEndStreetShowTextV"
                    android:layout_alignLeft="@+id/UserFriendEndCityTextV"
                    android:layout_alignRight="@+id/UserFriendEndCityTextV"
                    android:layout_alignTop="@+id/UserFriendEndStreetShowTextV"
                    android:layout_below="@+id/UserFriendEndCityTextV"
                    android:maxLength="15"
                    android:textSize="20sp" />

             </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/UserFriendSTRelativeL1"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/UserFriendEndPRelativeLayout1" >
            <TextView
                android:id="@+id/UserFriendSTTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="起始时间:"
                android:ems="2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/friendstarttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"/>
            
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/UserFriendETRelativeL1"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/UserFriendSTRelativeL1" >
            <TextView
                android:id="@+id/UserFriendETTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="到达时间:"
                android:ems="2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/friendendtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20sp" />

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/UserFriendGenderAgeRL"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/UserFriendETRelativeL1" >
            <TextView
                android:id="@+id/UserFriendGenderShowTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="性别:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/friendgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/UserFriendGenderShowTextV"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/UserFriendAgeShowTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/friendgender"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:text="年龄:"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/friendage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/UserFriendAgeShowTextV"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:ems="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/UserFriendAgeSuiTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/friendage"
                android:layout_marginLeft="5dp"
                android:text="岁"
                android:textSize="20sp" />

         </RelativeLayout>
         <RelativeLayout
                android:id="@+id/UserFriendPreRL"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/UserFriendGenderAgeRL" >
            <TextView
                android:id="@+id/UserFriendPrefTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="偏好："
                android:textSize="20sp" />
            <TextView
                 android:id="@+id/friendsignature"
                 android:layout_width="200dp"
                 android:layout_height="100dp"
                 style="@style/edittextStyle"                
                 android:layout_toRightOf="@+id/UserFriendPrefTextV" 
                 android:lines="3"                 
                 android:layout_marginLeft="20dp" 
                 android:textSize="20sp"/>            
        </RelativeLayout>
        <RelativeLayout
        	android:id="@+id/UserFriendMessageRL"
        	android:layout_width="fill_parent"
        	android:layout_height="50dp"
        	android:layout_below="@+id/UserFriendPreRL"
        	android:layout_alignParentBottom="true"
        	android:layout_alignParentLeft="true">    
    		<Button
        		android:id="@+id/UserFriendMessageButton"
        		android:layout_width="fill_parent"
        		android:layout_height="40dp"
        		android:layout_alignParentBottom="true"   
        		android:layout_marginTop="10dp"     		
        		android:background="#000000"
        		android:textColor="#FFFFFF"
        		android:text="私信" />
    	</RelativeLayout>   
    </RelativeLayout>

</ScrollView>